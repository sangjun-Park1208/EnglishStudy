<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test.TestActivity"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/tv_Stage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stage"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:fontFamily="@font/neodgm"
        android:gravity="center"
        android:layout_margin="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1/30"
                android:layout_margin="10dp"
                android:fontFamily="@font/neodgm"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_timeRemain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/neodgm"
                android:gravity="right"
                android:text="남은 시간:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_margin="10dp"
                android:fontFamily="@font/neodgm"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="영단어"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:layout_margin="10dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_select1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_mean1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:autoSizeTextType="uniform"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_select2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_mean2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:autoSizeTextType="uniform"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_select3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_mean3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:autoSizeTextType="uniform"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_select4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_mean4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:autoSizeTextType="uniform"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/bt_select1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/black"
            android:fontFamily="@font/neodgm"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/bt_select2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textColor="@color/black"
            android:fontFamily="@font/neodgm"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/bt_select3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textColor="@color/black"
            android:fontFamily="@font/neodgm"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/bt_select4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textColor="@color/black"
            android:fontFamily="@font/neodgm"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>