<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mem_drawer_layout"
    tools:context=".Memorization.MemorizationList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1EDF6"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="16sp"
                android:layout_weight="10"
                android:fontFamily="@font/neodgm"
                android:text="암기 - "
                android:textColor="@color/black"
                android:textSize="45sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stage "
                android:fontFamily="@font/neodgm"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="16sp"/>
            <TextView
                android:id="@+id/mem_stageNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:fontFamily="@font/neodgm"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="16sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/mem_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:fontFamily="@font/neodgm"
                android:textColor="@color/black"
                android:layout_marginLeft="16sp"
                android:text="목록"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/mem_progressText"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:fontFamily="@font/neodgm"
                android:text="X"
                android:textColor="@color/teal_200"
                android:textSize="30sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="16sp"
                android:fontFamily="@font/neodgm"
                android:text="/30"
                android:textColor="@color/teal_200"
                android:textSize="30sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/mem_progressBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="30"
            android:layout_margin="20dp"/>


        <TextView
            android:id="@+id/mem_word"
            android:layout_width="200sp"
            android:layout_height="100sp"
            android:layout_weight="10"
            android:paddingTop="30sp"
            android:text="banana"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/neodgm"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/mem_meaning"
            android:layout_width="200sp"
            android:layout_height="100sp"
            android:layout_marginTop="20dp"
            android:layout_weight="10"
            android:paddingTop="30sp"
            android:text="바나나"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/neodgm"
            android:textSize="50sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mem_known"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_marginRight="16sp"
                android:text="O"
                android:fontFamily="@font/neodgm"
                android:textSize="48sp" />

            <Button
                android:id="@+id/mem_unknown"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_marginLeft="16sp"
                android:text="X"
                android:fontFamily="@font/neodgm"
                android:textSize="48sp" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/memorization_voca_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>