<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test.TestResult"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/main_background">

    <TextView
        android:id="@+id/test_tv_Stage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Stage"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:fontFamily="@font/neodgm"
        android:gravity="center"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/test_tv_Correct"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Correct"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:fontFamily="@font/neodgm"
        android:gravity="center"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/test_tv_Wrong"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Wrong"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:fontFamily="@font/neodgm"
        android:gravity="center"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/test_bt_Retry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Retry"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:fontFamily="@font/neodgm"
            android:gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/buttonbackground_retro"
            android:alpha="0.8"/>

        <Button
            android:id="@+id/test_bt_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DONE"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:fontFamily="@font/neodgm"
            android:gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/buttonbackground_retro"
            android:alpha="0.8"/>
    </LinearLayout>
</LinearLayout>